<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelerRecordApp.PostDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryExperience" />
            <Label x:Name="labelVenue" 
                   Margin="20,30,20,0"
                   FontAttributes="Bold"
                   FontSize="22"
                   />
            <Label x:Name="labelCategory"
                   TextColor="{StaticResource blueColor}"
                   Margin="20,0,20,0"/>
            <Label x:Name="labelAddress" 
                   FontSize="15"
                   Margin="20,0,20,0"/>
            <Label x:Name="labelCoordinates"
                   FontSize="15"
                   Margin="20,0,20,0"/>
            <Label x:Name="labelDistance"
                   FontSize="15"
                   Margin="20,0,20,0"/>

            <Button Text="Update" x:Name="buttonUpdate"
                    Clicked="ButtonUpdate_Clicked"/>
            <Button Text="Delete" x:Name="buttonDelete"
                    Clicked="ButtonDelete_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>